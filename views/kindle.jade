    style.
    
      /* month-view */
      circle.cal.in-month {
        fill: #fff;
      }

      circle.cal.current {
        fill: #000;
      }

      circle.cal {
        fill: #fff;
      }

      text.cal.in-month {
        fill: #000;
      }
      text.cal.current {
        fill: #fff;
      }

      text.cal {
        fill: #ccc;
      }

      
